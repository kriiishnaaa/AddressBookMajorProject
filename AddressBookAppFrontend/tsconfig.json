{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",          // Change this to esnext
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",          // Keep this as is if you're targeting ES2020
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",                  // Keep this
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": false,
    "strictInjectionParameters": false
  }
}
